{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./dist",
    "rootDir": "../../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "removeComments": true
  },
  "include": [
    "index.ts",
    "../../src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../../src/**/*.test.ts",
    "../../test/**/*"
  ]
}